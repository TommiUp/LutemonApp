<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LutemonListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLutemonList"
        android:layout_width="333dp"
        android:layout_height="440dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="loadLutemonFile"
        android:text="Lataa Lutemonit"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/rvLutemonList"
        app:layout_constraintEnd_toEndOf="@+id/rvLutemonList" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="saveLutemonFile"
        android:text="Tallenna Lutemonit"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/rvLutemonList"
        app:layout_constraintStart_toStartOf="@+id/rvLutemonList" />
</androidx.constraintlayout.widget.ConstraintLayout>